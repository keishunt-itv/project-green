{
  "name": "Project Green",
  "description": "Search carbon intensity api and alert users",
  "manifest_version": 2,
  "author": "Keisha Hunt",
  "version": "1.0",
  "browser_action": {
    "default_popup": "index.html",
    "default_title": "See local emissions data!",
    "default_icon": {
      "16": "resources/icon_green_16.png",
      "32": "resources/energy.png",
      "48": "resources/energy.png",
      "128": "resources/icon_green_128.png"
    }
  },
  "permissions": ["storage", "http://localhost:8080/all"],
  "background": {
    "scripts": ["background.js"],
    "persistent": false
  },
  "icons": {
    "16": "resources/icon_green_16.png",
    "32": "resources/energy.png",
    "48": "resources/energy.png",
    "128": "resources/icon_green_128.png"
  }
}
